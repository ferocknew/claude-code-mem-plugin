{
  "name": "claude-code-mem",
  "version": "0.1.5",
  "description": "基于 MCP (Model Context Protocol) 的 Claude Code 记忆插件，用于记录和管理系统对话内容",
  "author": {
    "name": "ferocknew"
  },
  "license": "MIT",
  "repository": "https://github.com/ferocknew/claude-code-mem-plugin",
  "keywords": [
    "memory",
    "mcp",
    "conversation",
    "history",
    "search"
  ],
  "install": "node .claude-plugin/install.js",
  "mcpServers": {
    "claude-memory": {
      "command": "uvx",
      "args": [
        "--from",
        "claude-code-mem-plugin",
        "claude-mem-client"
      ]
    }
  }
}
