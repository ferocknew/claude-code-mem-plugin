# 插件包只包含 plugin 目录
include plugin/
recursive-include plugin *

# 排除所有其他内容
exclude server/
exclude docker/
exclude scripts/
exclude tests/
exclude examples/
exclude data/
exclude client/
exclude hooks/
exclude .claude-plugin/

# 包含顶层必要文件
include LICENSE
include README.md
include VERSION

# 排除开发文件
exclude compose.yaml
exclude env.example
exclude requirements.txt
exclude build_and_publish_uv.sh
exclude start_plugin.sh
exclude uv.lock
exclude MANIFEST.in
exclude pyproject.toml

global-exclude __pycache__
global-exclude *.py[cod]
global-exclude *.so
global-exclude .DS_Store
global-exclude .gitignore
